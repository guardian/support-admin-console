{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "strict": true,
    "outDir": "./public/build"
  },
  "exclude": [
    "node_modules",
    "target",
    "config",
    "scripts",
    "**/*.spec.tsx",
    "cdk",
    "**/*.bundle.js"
  ]
}
